<% provide(:title, 'New message') %>

<div class="row">
	<%= render 'messages/nav' %>

	<div class="col-md-9">
		<div class="message">

			<%= form_for @message do |f| %>
		    <%= render 'shared/error_messages', object: f.object %>
				
				<%= f.label :to %>
				<%= f.collection_select(:to, User.all, :id, :name) %>
			
				<%= f.label :content, "Message" %>
				<%= f.text_area :content %>
			
			  <%= f.submit "Send", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>